@{
}

@model List<EmployeeList.Models.Entities.Employees>
<h2>Employees</h2>


<table class="table">
       <thead>
           <tr>
               <th>Employee Id</th>
               <th>Name</th>
               <th>Phone Number</th>
               <th>Email</th>
               <th>Employed</th>

           </tr>
       </thead>
       <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.Email</td>
                <td>
                    @if (employee.Employed)
                    {
                        @:Yes
                    }
                    else
                    {
                        @:No
                    }
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Employee"
                    asp-action="EditEmployee" asp-route-id="@employee.Id">Edit</a>
                </td>
            </tr>  
          
        }
    </tbody>
</table>